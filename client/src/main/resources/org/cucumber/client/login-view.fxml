<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="500.0" prefWidth="650.0" spacing="20.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.cucumber.client.LoginController">
    <padding>
        <Insets bottom="50.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0">
      <children>
         <ImageView fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
            <image>
               <Image url="@cucumber_logo.png" />
            </image>
         </ImageView>
         <Label fx:id="errorLabel" text="entrez vos infos" />
         <HBox alignment="CENTER" layoutX="10.0" layoutY="10.0" prefHeight="100.0" prefWidth="200.0">
            <children>
               <Label text="Username " />
               <TextField fx:id="username" />
            </children>
         </HBox>
         <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
            <children>
               <Label text="Password  " />
               <PasswordField fx:id="password" />
            </children>
         </HBox>
          <Button fx:id="loginBtn" onAction="#onLoginButton" text=" Login ">
            <VBox.margin>
               <Insets bottom="2.0" top="7.0" />
            </VBox.margin></Button>
         <Button mnemonicParsing="false" onAction="#onSignUp" text="SignUp" />
      </children>
   </VBox>
</VBox>
